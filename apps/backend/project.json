{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "dev": {
      "executor": "@nx/js:node",
      "dependsOn": [
        {
          "target": "docker"
        }
      ],
      "options": {
        "buildTarget": "backend:build:development"
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "backend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "backend:build:development"
        },
        "production": {
          "buildTarget": "backend:build:production"
        }
      }
    },
    "docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose up -d --wait",
        "cwd": "apps/backend",
        "color": true
      }
    },
    "seed": {
      "dependsOn": [
        {
          "target": "docker"
        }
      ],
      "executor": "nx:run-commands",
      "options": {
        "buildTarget": "backend:build",
        "command": "node dist/apps/backend/seeder"
      }
    },
    "seed-refresh": {
      "dependsOn": [
        {
          "target": "docker"
        }
      ],
      "executor": "nx:run-commands",
      "options": {
        "buildTarget": "backend:build",
        "command": "node dist/apps/backend/seeder --refresh"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "dev",
      "options": {
        "parallel": false,
        "commands": [
          "docker build -f apps/backend/Dockerfile . -t abdelrahmanessawy/vnd-backend-dev",
          "docker push {args.DockerContainerRegistry}",
          "curl -X POST -H 'Authorization: Bearer {args.COOLIFY_TOKEN}' {args.DEV_BACKEND_COOLIFY_WEBHOOK}"
        ]
      },
      "configurations": {
        "dev": {
          "DockerContainerRegistry": "abdelrahmanessawy/vnd-backend-dev"
        },
        "staging": {
          "DockerContainerRegistry": "abdelrahmanessawy/vnd-backend-staging"
        },
        "production": {
          "DockerContainerRegistry": "abdelrahmanessawy/vnd-backend-production"
        }
      }
    }
  }
}
